<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>se.vandmo.tests</groupId>
  <artifactId>pom-future-format</artifactId>
  <version>0-SNAPSHOT</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>se.vandmo.testing</groupId>
      <artifactId>leaf</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>se.vandmo.testing</groupId>
      <artifactId>another-leaf</artifactId>
      <version>1.0</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>se.vandmo.testing</groupId>
      <artifactId>a-third-leaf</artifactId>
      <version>1.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>se.vandmo.testing</groupId>
      <artifactId>a-classified-leaf</artifactId>
      <version>1.0</version>
      <classifier>classy</classifier>
    </dependency>
    <dependency>
      <groupId>se.vandmo.testing</groupId>
      <artifactId>a-war</artifactId>
      <version>1.0</version>
      <type>war</type>
    </dependency>
  </dependencies>

  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.extensions</groupId>
        <artifactId>maven-enforcer-extension</artifactId>
        <version>3.5.0</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>se.vandmo</groupId>
        <artifactId>dependency-lock-maven-plugin</artifactId>
        <version>@project.version@</version>
        <configuration>
          <format>pom</format>
          <lockBuild>true</lockBuild>
          <dependencySets>
            <dependencySet>
              <includes>
                <include>se.vandmo:dependency-lock-maven-plugin</include>
              </includes>
              <integrity>ignore</integrity>
              <version>ignore</version>
            </dependencySet>
          </dependencySets>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
